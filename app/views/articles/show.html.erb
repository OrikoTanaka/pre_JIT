<% provide(:title, "article") %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <h1>記事詳細</h1>

      <table class="table table-hover" id="table-article">
        <thead>
          <tr>
            <th class="col-sm-3">タイトル</th>
            <th class="col-sm-5">内容</th>
            <th>画像</th>
          </tr>            
        </thead>
        <tbody>
          <tr>
            <td><%= @article.title %></td>
            <td><%= @article.content %></td>
            <% if @article.image.present? %>
              <td><%= image_tag @article.image.variant(resize_to_limit: [200, 200]) %></td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <div class="button center">
        <%= link_to "編集", edit_user_article_path(current_user, @article), class: "btn btn-sm btn-primary" %>
        <%= button_to "削除", user_article_path(current_user, @article), method: :delete,
        data: { confirm: "「#{@article.title}」を削除します。よろしいですか？" }, class: "btn btn-sm btn-danger" %><br>
        <%= link_to "記事一覧へ戻る", user_articles_path(current_user), class: "btn btn-sm btn-primary" %>
      </div>
  </div>
</div>
